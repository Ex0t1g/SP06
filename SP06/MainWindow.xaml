<Window x:Class="SP06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SP06"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <ProgressBar Name="ProgressBar1" Height="20" Margin="5" />
        <ProgressBar Name="ProgressBar2" Height="20" Margin="5" />
        <ProgressBar Name="ProgressBar3" Height="20" Margin="5" />
        <ProgressBar Name="ProgressBar4" Height="20" Margin="5" />

        <Button Name="StartButton" Content="Start" Margin="5" Click="StartButton_Click"/>
        <Button Name="CancelButton" Content="Cancel" Margin="5" Click="CancelButton_Click"/>
        <TextBlock Name="StatusText" Margin="5" Text="Статус: Готово"/>
    </StackPanel>
</Window>
